<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.example.jomarie.kotlinpractice.Activity.Transaction">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/skranji"
                android:gravity="center"
                android:text="Shipping Details"
                android:textSize="30sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/costumername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/costumernamevalue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Full Name"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/costumeremail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/costumeremailvalue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email Add"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/costumercontact"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <EditText
                    android:maxLength="10"
                    android:id="@+id/costumercontactvalue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Contact #"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:layout_weight="3"
                android:layout_height="0dp"
                android:layout_width="match_parent" >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/costumeraddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:paddingEnd="50dp"
                        android:gravity="clip_vertical"
                        android:inputType="textMultiLine"
                        android:id="@+id/costumeraddressvalue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Address" />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:id="@+id/addLocation"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_add_location_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/btnProceedPay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/skranji"
        android:text="Confirm"
        android:textSize="30sp" />

    <Button
        android:textColor="@android:color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/skranji"
        android:text="Login for Speedy Checkout"
        android:textSize="20sp" />

</LinearLayout>
